---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
interface Props {
    banner: ImageMetadata;
    title: string;
}

const {
          banner,
          title,
      } = Astro.props;
---

<Image
    src={ banner }
    alt={ title }
    class="row-start-1 sm:col-span-full max-h-[32rem] w-full object-contain  object-center mb-8"
/>