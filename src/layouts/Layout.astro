---
// Supports weights 200-900
import "@fontsource-variable/nunito";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0"
    />
    <link rel="icon"
          type="image/svg+xml"
          href="/favicon.svg"
    />
    <title>{ title }</title>
        <link rel="sitemap"
              href="/sitemap-index.xml"
        />
        </head>
        <body class="font-sans bg-gray-50">
            <slot />
        </body>
</html>
