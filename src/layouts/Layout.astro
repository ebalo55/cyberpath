---
// Supports weights 200-900
import "@fontsource-variable/nunito";
import Header from "src/components/astro/common/header.astro";
import Footer from "src/components/astro/common/footer.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en"
      class="scroll-smooth scroll-pt-32"
>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0"
    />
    <link rel="icon"
          type="image/svg+xml"
          href="/favicon.svg"
    />
    <link rel="sitemap"
          href="/sitemap-index.xml"
    />
    <title>{ title }</title>
</head>
<body class="font-sans bg-gray-50 text-zinc-900 overflow-x-hidden">
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>