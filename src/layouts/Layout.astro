---
// Supports weights 200-900
import "@fontsource-variable/nunito";
import Header from "@components/header.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0"
    />
    <link rel="icon"
          type="image/svg+xml"
          href="/favicon.svg"
    />
    <link rel="sitemap"
          href="/sitemap-index.xml"
    />
    <title>{ title }</title>
</head>
<body class="font-sans bg-gray-50 text-zinc-900 scroll-smooth">
    <Header />
    <slot />
</body>
</html>